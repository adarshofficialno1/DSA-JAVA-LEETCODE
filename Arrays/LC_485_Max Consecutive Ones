// Leetcode 485 - Max Consecutive Ones
// Approach: Count consecutive 1s and track the maximum count
// Time Complexity: O(n)
// Space Complexity: O(1)

class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        int n = nums.length;
        int count = 0;
        int max = 0;
        for(int i=0; i<n; i++){
            if(nums[i]==1){
                count++;
                max = Math.max(max,count);
            }else{
                count=0;
            }
        }
        return max;
        
    }
}
