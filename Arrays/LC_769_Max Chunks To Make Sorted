// Leetcode 769 - Max Chunks To Make Sorted
// Approach: Track the maximum value so far;
// whenever max == current index, a chunk can be formed
// Time Complexity: O(n)
// Space Complexity: O(1)

class Solution {
    public int maxChunksToSorted(int[] arr) {
        int max = 0;
        int chunks = 0;
        for(int i=0; i<arr.length; i++){
            max = Math.max(max, arr[i]);
            if(max==i){
                chunks++;
            }
        } 
        return chunks; 
    }
}
